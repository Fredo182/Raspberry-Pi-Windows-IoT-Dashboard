                    <RowDefinition Height="1*" />
                    <RowDefinition Height=".4*" />
                    <RowDefinition Height=".6*" />
                    <RowDefinition Height=".6*" />
                    <RowDefinition Height=".2*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Name="ForecastDay1" TextAlignment="Center" VerticalAlignment="Center" FontFamily="pack://application:,,,/Assets/weather.ttf#Weather Icons" FontSize="30" Foreground="White" ></TextBlock>
                <TextBlock Grid.Row="1" Name="ForecastCode1" TextAlignment="Center" VerticalAlignment="Center" FontFamily="pack://application:,,,/Assets/weather.ttf#Weather Icons" FontSize="65" Foreground="White" ></TextBlock>
