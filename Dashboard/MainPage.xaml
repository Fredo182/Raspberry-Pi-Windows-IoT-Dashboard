                <Grid.RowDefinitions>
                    <RowDefinition Height=".5*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height=".4*" />
                    <RowDefinition Height=".6*" />
                    <RowDefinition Height=".6*" />
                    <RowDefinition Height=".2*" />
                </Grid.RowDefinitions>
